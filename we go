  <div class="toast" id="toast"></div>

  <script>
    const codes = ["12315", "15143", "61649", "34127", "78391", "20486", "95371", "38764", "64025", "81943", "17436", "29873", "54692", "73518", "86702", "91034", "15279", "62385", "43960", "80421", "37526", "98214", "41693", "27058", "69814", "35971", "18427", "90763", "26534", "83217", "74196", "19082", "53648", "88206", "41792", "67105", "90815", "26097", "84371", "79215", "35480", "68821", "51493", "10327", "92641", "38059", "24817", "69035", "72590", "31948"];
    const videosList = ["https://www.youtube.com/embed/tMhGBtEhNS0", "https://www.youtube.com/embed/jpibqnDFGjE", "https://www.youtube.com/embed/1F1IdaFXj_k", "https://www.youtube.com/embed/__fRPPggOos", "https://www.youtube.com/embed/c7LZGQpCaiI", "https://www.youtube.com/embed/4CaL6CCMiXQ", "https://www.youtube.com/embed/olyCiL0IZtk"];

    const toast = msg => {
      let t = document.getElementById('toast');
      t.innerText = msg;
      t.style.display = 'block';
      setTimeout(() => t.style.display = 'none', 3000);
    }

    function showLogin() {
      joinPage.classList.add('hidden');
      loginPage.classList.remove('hidden');
    }

    function showJoin() {
      loginPage.classList.add('hidden');
      joinPage.classList.remove('hidden');
    }

    function register() {
      const full = fullname.value.trim(), ph = phone.value.trim(), user = username.value.trim(), pass = password.value.trim();
      if (!full || !ph || !user || !pass) return toast('âŒ Jaza taarifa zote!');
      localStorage.setItem('user', JSON.stringify({ full, ph, user, pass, balance: 0, active: false, lastWatch: 0 }));
      joinPage.classList.add('hidden');
      activatePage.classList.remove('hidden');
      toast('âœ… Akaunti imeundwa! Sasa lipia kuactivate.');
    }

    function login() {
      const user = loginUser.value.trim(), pass = loginPass.value.trim();
      const data = JSON.parse(localStorage.getItem('user') || '{}');
      if (!data.user) return toast('âŒ Hakuna akaunti hii!');
      if (data.user === user && data.pass === pass) {
        if (!data.active) {
          loginPage.classList.add('hidden');
          activatePage.classList.remove('hidden');
        } else openDashboard(data);
      } else toast('âŒ Taarifa sio sahihi!');
    }

    function activateAccount() {
      const code = actCode.value.trim();
      if (codes.includes(code)) {
        let data = JSON.parse(localStorage.getItem('user'));
        data.active = true;
        localStorage.setItem('user', JSON.stringify(data));
        codes.splice(codes.indexOf(code), 1);
        toast('ðŸŽ‰ Account imewezeshwa kikamilifu!');
        openDashboard(data);
      } else toast('âŒ Code sio sahihi au imetumika!');
    }

    function openDashboard(data) {
      activatePage.classList.add('hidden');
      dashboard.style.display = 'flex';
      hiUser.innerText = 'ðŸ‘‹ Hi ' + data.user;
      balance.innerText = data.balance;
      loadVideos();
    }

    function loadVideos() {
      const vidCont = document.getElementById('videos');
      vidCont.innerHTML = '';
      let u = JSON.parse(localStorage.getItem('user'));
      const now = Date.now();
      const diff = now - (u.lastWatch || 0);
      const dayMs = 24 * 60 * 60 * 1000;
      if (diff < dayMs) return toast('â³ Utatazama tena baada ya masaa 24');
      videosList.forEach((link, i) => {
        const div = document.createElement('div');
        div.className = 'video-item';
        div.innerHTML = `
          <p style="color: var(--gold); font-weight: bold;">ðŸ“¹ Video ${i + 1}</p>
          <iframe width="100%" height="200" src="${link}" frameborder="0" allowfullscreen style="border-radius: 10px; margin: 10px 0;"></iframe>
          <button id="watchBtn${i}">â–¶ï¸ Tazama</button>
          <p id="countdown${i}" style="color:var(--gold);font-weight:bold;display:none;">30s</p>
        `;
        vidCont.appendChild(div);
        const btn = document.getElementById(`watchBtn${i}`);
        const cdEl = document.getElementById(`countdown${i}`);
        btn.onclick = function () {
          btn.disabled = true;
          btn.style.opacity = '0.5';
          cdEl.style.display = 'block';
          let seconds = 30;
          const interval = setInterval(() => {
            cdEl.innerText = `â±ï¸ ${seconds}s`;
            seconds--;
            if (seconds < 0) {
              clearInterval(interval);
              div.remove();
              let u = JSON.parse(localStorage.getItem('user'));
              u.balance += 500;
              localStorage.setItem('user', JSON.stringify(u));
              balance.innerText = u.balance;
              toast('ðŸ’° +500 TZS imewekwa kwenye akaunti!');
              if (document.getElementById('videos').children.length === 0) {
                u.lastWatch = Date.now();
                localStorage.setItem('user', JSON.stringify(u));
                toast('ðŸŽ‰ Hongera! Subiri masaa 24 kwa video mpya');
              }
            }
          }, 1000);
        };
      });
    }

    function withdraw() {
      const amt = parseInt(amount.value);
      if (!amt) return toast('âŒ Weka kiasi!');
      if (amt < 5000) return toast('âŒ Withdrawal min ni 5,000 TZS!');
      if (amt > 25000) return toast('âŒ Kiwango cha juu ni 25,000 TZS!');
      let u = JSON.parse(localStorage.getItem('user'));
      if (amt > u.balance) return toast('âŒ Balance haitoshi!');
      u.balance -= amt;
      localStorage.setItem('user', JSON.stringify(u));
      balance.innerText = u.balance;
      toast('âœ… Umetoa TZS ' + amt.toLocaleString());
    }

    function toggleMenu() {
      const menu = document.getElementById('menuBox');
      menu.style.display = menu.style.display === 'block' ? 'none' : 'block';
    }

    function showProfile() {
      dashboard.style.display = 'none';
      profilePage.classList.remove('hidden');
      const u = JSON.parse(localStorage.getItem('user'));
      proName.innerText = 'ðŸ“ Jina: ' + u.full;
      proPhone.innerText = 'ðŸ“± Simu: ' + u.ph;
      proUser.innerText = 'ðŸ‘¤ Username: ' + u.user;
    }

    function backDashboard() {
      profilePage.classList.add('hidden');
      dashboard.style.display = 'flex';
    }

    function logout() {
      if (confirm('Je, una uhakika unataka kutoka?')) {
        localStorage.removeItem('user');
        location.reload();
      }
    }

    function alertBox(msg) {
      toast(msg);
    }

    function showPaymentInstructions() {
      document.getElementById('paymentModal').style.display = 'flex';
    }

    function closePaymentModal() {
      document.getElementById('paymentModal').style.display = 'none';
    }

    // Close modal when clicking outside
    document.getElementById('paymentModal').addEventListener('click', function (e) {
      if (e.target === this) {
        closePaymentModal();
      }
    });
  </script>
</body>
</html>